{
    "branches": [
        "main"
    ],
    "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "CHANGELOG.md"
            }
        ],
        [
            "@semantic-release/npm",
            {
                "npmPublish": false
            }
        ],
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "node ./scripts/update-manifest-version.js ${nextRelease.version} && npm run build",
                "successCmd": "echo \"nextReleaseVersion=${nextRelease.version}\" >> $GITHUB_OUTPUT"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "package.json",
                    "CHANGELOG.md",
                    "public/manifest.*.json"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ],
        [
            "@semantic-release/github",
            {
                "assets": [
                    {
                        "path": "dist/darkconnect-*-chrome.zip"
                    },
                    {
                        "path": "dist/darkconnect-*-firefox.zip"
                    }
                ]
            }
        ]
    ],
    "preset": "conventionalcommits"
}