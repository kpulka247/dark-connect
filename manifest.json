{
  "manifest_version": 3,
  "name": "Dark Connect",
  "version": "1.1.5",
  "description": "Dark mode extension for connect.garmin.com that replaces light colors with their dark theme.",
  "content_scripts": [
    {
      "matches": ["https://connect.garmin.com/*", "https://livetrack.garmin.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "dark-connect@kpulka.com",
      "strict_min_version": "109.0"
    }
  }
}